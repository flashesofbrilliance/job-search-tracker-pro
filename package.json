{
  "name": "job-search-tracker-pro",
  "version": "1.0.0",
  "description": "Enterprise-grade job application tracking and optimization platform with validated learning capabilities",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/index.html",
    "build": "npm run minify-css && npm run minify-js && npm run copy-files",
    "minify-css": "cleancss -o dist/style.min.css style.css",
    "minify-js": "uglifyjs app.js -o dist/app.min.js --compress --mangle",
    "copy-files": "mkdir -p dist && cp index.html dist/index.html && (sed -i.bak -e 's/style\\.css/style.min.css/g' -e 's/app\\.js/app.min.js/g' dist/index.html && rm -f dist/index.html.bak)",
    "serve": "http-server . -p 8080 -o",
    "test": "echo 'Testing with sample data' && npm run serve",
    "lint": "eslint app.js --fix",
    "format": "prettier --write '*.{js,css,html}'",
    "deploy": "npm run build && gh-pages -d .",
    "start": "npm run serve",
    "clean": "rm -rf dist node_modules",
    "reinstall": "npm run clean && npm install",
    "health-check": "curl -f http://localhost:8080 || exit 1"
  },
  "keywords": [
    "job-search",
    "tracking",
    "analytics",
    "progressive-web-app",
    "career-management",
    "data-visualization",
    "validated-learning",
    "bulk-operations",
    "goal-tracking"
  ],
  "author": "Job Search Tracker Pro Team",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "http-server": "^14.1.1",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "gh-pages": "^6.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/job-search-tracker-pro.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/job-search-tracker-pro/issues"
  },
  "homepage": "https://yourusername.github.io/job-search-tracker-pro/"
}
