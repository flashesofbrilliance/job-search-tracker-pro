{
  "env": {
    "browser": true,
    "es2021": true,
    "serviceworker": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "no-undef": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "es5"],
    "no-trailing-spaces": "error"
  },
  "globals": {
    "Chart": "readonly",
    "jobTracker": "writable"
  }
}
